<h1 style="text-align:center">Burger Database <img class="image" src="/assets/img/Cheese_Burger_Emoji.png" alt="Burger Emoji" style="width:50px"></h1>


<br>
<div class="lists">
  <h2>Burgers that have not yet been devoured</h2>
  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="lists">
  <h2>Burgers that have been devoured</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
      {{/if}}
    {{/each}}
  </ul>
</div>

<div class="adder">
  <h2>Add a burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ca">burger name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <button type="submit">Add Burger</button>
  </form>
</div>